@{
    ViewBag.Title = "Предметы подготовки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Цели", "Target", "Target")

<div class="back">
    <div class="page-header">
        <h1 align="center">Предметы подготовки</h1>
    </div>
    <div ng-app="trainApp" ng-controller="trainController">
        <div class="form-inline">
            <div class="form-group">
                <div class="col-lg-7">
                    <input class="form-control" ng-model="name" placeholder="Предмет" />
                </div>
                <div class="col-lg-1">
                    <button class="btn btn-default" ng-click="addItem(name)">Добавить</button>
                </div>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Предмет</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in list.items">
                    <td>{{item.name}}</td>
                    <td><button class="btn btn-default" ng-click="delete(item)">Удалить</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.11/angular.min.js"></script>
<script>
    var trainApp = angular.module("trainApp",[]);

    trainApp.controller("trainController", function ($scope, $http) {
        $http.get('GetData').success(function (data) {
            var model = {
                items: []
            };

            $scope.list = model;

            $.each(data, function (i, item) {
                $scope.list.items.push(item);
            });

        });

        $scope.addItem = function (text) {
            var train = {
                name: text,
            };

            $scope.name = null;
            $scope.list.items.push(train);

            $.ajax({
                url: '/train/add',
                type: 'POST',
                data: JSON.stringify(train),
                contentType: "application/json;charset=utf-8"
            });
        };

        $scope.delete = function (item) {
            var index = $scope.list.items.indexOf(item);
            $scope.list.items.splice(index, 1);
            $.ajax({
                url: '/train/delete',
                type: 'POST',
                data: JSON.stringify(item),
                contentType: "application/json;charset=utf-8"
            });
        };
    });
</script>