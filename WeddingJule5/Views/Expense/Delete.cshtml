@model WeddingJule.Models.Expense
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ExpenseID)
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>Трата</dt>
                <dd>@Html.DisplayFor(m => m.name)</dd>

                <dt>@Html.LabelFor(m => m.price)</dt>
                <dd>@Html.DisplayFor(m => m.price)</dd>

                <dt>@Html.LabelFor(m => m.date)</dt>
                <dd>@Html.DisplayFor(m => m.date)</dd>

                <dt>Категория</dt>
                @Html.HiddenFor(m=>m.CategoryId)
                <dd>@Html.DisplayFor(model => model.Category.name)</dd>

                <dd><input type="submit" value="Удалить" /></dd>
            </dl>
        </div>
    }
</div>