@model IEnumerable<WeddingJule.Models.CategoryViewModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список категорий</title>
</head>
<body>
    <div class="center">
        <h2>Список категорий</h2>
    </div>
    <p>
        @Html.ActionLink("Добавить новую категорию", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Категория
            </th>
            <th>
                Итого потрачено
            </th>
            <th>
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category.name)
            </td>
            <td>                
                @Html.DisplayFor(modelItem => item.totalCategoryPriceString)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id=item.category.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.category.Id })
            </td>
        </tr>
    }    
    </table>
</body>
</html>
