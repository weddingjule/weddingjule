@{
    ViewBag.Title = "Цели";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h1>Список задач</h1>
</div>
<div class="panel" ng-app="targetApp" ng-controller="targetController">
    <div class="form-inline">
        <div class="form-group">
            <div class="col-lg-8">
                <input class="form-control" ng-model="name" placeholder="Цель" />
            </div>
            <div class="col-lg-3">
                <input type="number" class="form-control" ng-model="priority" placeholder="Приоритет" />
            </div>
            <div class="col-lg-1">
                <button class="btn btn-default" ng-click="addItem(name, priority)">Добавить</button>
            </div>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Цель</th>
                <th>Приоритет</th>
                <th>Сделано</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in list.items">
                <td>{{item.name}}</td>
                <td>{{item.priority}}</td>
                <td><input type="checkbox" ng-model="item.done" /></td>
                <td><button class="btn btn-default" ng-click="delete(item)">Удалить</button></td>
            </tr>
        </tbody>
    </table>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.11/angular.min.js"></script>
<script>
    var targetApp = angular.module("targetApp", []);
    targetApp.controller("targetController", function ($scope, $http) {
       

        $http.get('GetData').success(function (data) {
            var model = {
                items: []
            };
            $scope.list = model;

            $.each(data, function (i, item) {
                $scope.list.items.push(item);
            });
        });

        $scope.addItem = function (text, prior) {
            var target = {
                id: null,
                name: text,
                priority: prior,
                done: false
            };
            $scope.list.items.push(target);
            $.ajax({
                url: '/target/add',
                type: 'POST',
                data: JSON.stringify(target),
                contentType: "application/json;charset=utf-8"
            });
        };

        $scope.delete = function (item) {
            var index = $scope.list.items.indexOf(item);
            $scope.list.items.splice(index, 1);
            $.ajax({
                url: '/target/delete',
                type: 'POST',
                data: JSON.stringify(item),
                contentType: "application/json;charset=utf-8"
            });
        }
    });
</script>