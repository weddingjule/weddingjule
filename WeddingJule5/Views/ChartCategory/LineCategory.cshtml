@{
    ViewBag.Title = "LineCategory";
}

@model WeddingJule.Controllers.CategoryWeekInfoViewModel

<html>
<head>
    <script type="text/javascript"
            src="https://www.google.com/jsapi?autoload={
            'modules':[{
              'name':'visualization',
              'version':'1',
              'packages':['corechart']
            }]
          }"></script>

    <script type="text/javascript">
        google.setOnLoadCallback(drawChart);

        function drawChart() {
            
            var charDatas = @WeddingJule.Controllers.JavaScriptConvert.SerializeObject(Model.categoryWeekInfos);

            var a = [];

            
            // Create the data table.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'monthName');
            data.addColumn('number', charDatas[0]['categoryName']);

            charDatas.forEach(function(item, i, charDatas) {
                a.push([item['monthName'],item['price']]);
            });

            data.addRows(a);

            var options = {
                title: 'Траты по месяцам',
                curveType: 'function',
                legend: { position: 'bottom' }
            };

            var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

            chart.draw(data, options);
        }
    </script>
</head>
<body>
    <div id="curve_chart" style="width: 900px; height: 500px"></div>
</body>
</html>